<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".registration.ActivityRegister"
    android:background="#0c1325"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/signup_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="120sp"
        android:maxHeight="120sp"
        android:padding="10sp"
        android:src="@drawable/sign_up_top_logo" />
    <TextView
        android:layout_below="@+id/signup_header"
        android:id="@+id/text_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/notif_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:padding="5sp"
        android:background="#ffbc00"
        android:drawableStart="@drawable/ic_icon"
        android:layout_below="@+id/text_registration"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/notif_message">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:padding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:padding="5sp"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="start"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:padding="5sp"
                    android:inputType="textPersonName"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="left"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lastName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:padding="5sp"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="left"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="5sp"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="left"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/repassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:hint="@string/re_type_password"
                    android:inputType="textPassword"
                    android:padding="5sp"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="left"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/repassword"
                    android:id="@+id/birthdate_linear"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="32dp">

                        <EditText
                            android:id="@+id/birthdate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:background="#60ffffff"
                            android:ems="10"
                            android:gravity="start"
                            android:hint="@string/birthday"
                            android:padding="5sp"
                            android:textColor="#3a5daa"
                            android:textColorHint="#FFFFFF"
                            android:textSize="15sp"
                            android:inputType="date"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <ImageButton
                            android:id="@+id/birthday_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="27sp"
                            android:layout_marginTop="25sp"/>
                    </LinearLayout>
                </LinearLayout>
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthdate_linear"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:padding="5sp"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="175dp"
                    android:layout_below="@+id/phone_number"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="23dp"
                    android:backgroundTint="#FFF"
                    android:visibility="gone"
                    android:ems="10"
                    android:gravity="top|center"
                    android:hint="@string/address"
                    android:inputType="textMultiLine"
                    android:padding="5sp"
                    android:textColor="#3a5daa"
                    android:background="#60ffffff"
                    android:textColorHint="#FFFFFF" />

                <Spinner
                    android:id="@+id/country"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthdate_linear"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="27dp"
                    android:textColor="#3a5daa"
                    android:ems="10"/>

                <Button
                    android:id="@+id/registration"
                    android:layout_width="215dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/phone_number"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="181dp"
                    android:background="@drawable/rounded_button_new_blue"
                    android:text="@string/submit"
                    android:textColor="#FFFFFFFF" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
