<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/new_background_color_gradient">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/image_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/show_profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_width="2dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_square"
                    app:civ_border_color="#ffbc00"
                    android:layout_marginTop="20sp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="50sp"
                    android:src="@drawable/ic_photo_camera"
                    android:layout_marginTop="-45sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_linear"
                android:layout_marginTop="5sp">
                <Button
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:id="@+id/save_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_button_new_blue"/>
                <Button
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:id="@+id/close_edit_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/close"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_button_new_blue"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>